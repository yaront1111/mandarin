# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000
VITE_API_TIMEOUT=30000  # 30 seconds in milliseconds

# Authentication
VITE_TOKEN_NAME=dating_app_token
VITE_REFRESH_TOKEN_NAME=dating_app_refresh_token

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_CHAT=true
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_LOCATION_SHARING=true
VITE_ENABLE_DARK_MODE=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_MAX_UPLOAD_SIZE=10  # in MB
VITE_SUPPORTED_LANGUAGES=en,es,fr,de

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key
VITE_NOTIFICATION_PERMISSION_PROMPT_DELAY=5000  # 5 seconds

# Media Configuration
VITE_MAX_IMAGE_WIDTH=1920
VITE_MAX_IMAGE_HEIGHT=1080
VITE_IMAGE_QUALITY=0.8
VITE_ENABLE_IMAGE_COMPRESSION=true

# Debug Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error  # debug, info, warn, error
