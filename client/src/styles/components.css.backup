/* =============================================
   Media Queries
   ============================================= */

@media (max-width: 992px) {
  .logo {
    font-size: 1.375rem;
  }

  .tab-button {
    padding: 0.5rem 0.875rem;
  }

  .profile-layout {
    grid-template-columns: 1fr;
    gap: var(--space-lg, 24px);
  }

  .profile-photos-section,
  .profile-details-section {
    grid-column: 1;
  }

  .hero-section {
    grid-template-columns: 1fr;
  }

  .hero-image {
    display: none;
  }

  .messages-layout {
    grid-template-columns: 1fr;
    height: auto;
    min-height: calc(100vh - 180px);
  }

  .conversations-list {
    border-right: none;
    border-bottom: 1px solid var(--border-color, #e0e0e0);
    max-height: 300px;
  }
}

@media (max-width: 768px) {
  :root {
    --space-md: 12px;
    --space-lg: 16px;
  }

  body {
    font-size: 15px;
  }

  .user-dropdown {
    min-width: 180px;
  }

  .auth-error-content {
    padding: 1.875rem;
  }

  .features-grid {
    grid-template-columns: 1fr;
  }

  .users-grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px;
  }

  .footer-content {
    flex-direction: column;
    gap: var(--space-lg, 16px);
    align-items: center;
    text-align: center;
  }

  .main-tabs {
    display: none;
  }

  .hero-content h1 {
    font-size: var(--font-size-3xl, 2rem);
  }

  .profile-stats {
    grid-template-columns: 1fr;
  }

  .compatibility-score {
    flex-direction: column;
  }

  .user-card-photo {
    height: 200px;
  }

  .user-list-photo-container {
    width: 90px;
    height: 90px;
  }

  .user-list-info {
    padding: 12px;
  }

  .user-list-name {
    font-size: 14px;
  }

  .extended-detail-item {
    font-size: 0.8em;
  }

  .interest-tag {
    font-size: 11px;
  }

  .messages-page {
    flex-direction: column;
  }

  .conversations-panel {
    width: 100%;
    height: 200px;
    border-right: none;
    border-bottom: 1px solid #e5e7eb;
  }

  .conversations-list {
    display: flex;
    overflow-x: auto;
    padding: 8px;
