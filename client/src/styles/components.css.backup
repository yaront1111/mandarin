    justify-content: center;
  }

  .photo-thumbnails {
    justify-content: center;
  }

  .profile-actions {
    flex-direction: column;
  }

  .profile-action-button {
    width: 100%;
    justify-content: center;
  }

  .user-list-info {
    padding: 12px;
    gap: 4px;
  }

  .user-card-name {
    font-size: 16px;
  }

  .user-list-item {
    flex-direction: column;
  }

  .user-list-photo-container {
    width: 100%;
