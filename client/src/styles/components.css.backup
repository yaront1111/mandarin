}

.dark .user-card-photo,
.dark .user-list-photo-container {
  background-color: var(--dark, #1a1a1a);
}

.dark .interest-tag {
  background-color: rgba(var(--secondary-rgb), 0.15);
  color: var(--secondary-300);
}

.dark .interest-tag:hover {
  background-color: rgba(var(--secondary-rgb), 0.25);
}

.dark .looking-for-tag {
  background-color: rgba(var(--primary-rgb), 0.15);
  color: var(--primary-300);
}

.dark .looking-for-tag:hover {
  background-color: rgba(var(--primary-rgb), 0.25);
}

.dark .into-tag {
  background-color: rgba(var(--warning-rgb), 0.15);
  color: var(--warning-300);
}

.dark .into-tag:hover {
  background-color: rgba(var(--warning-rgb), 0.25);
}

.dark .interest-more,
.dark .tags-toggle-btn {
  background-color: rgba(var(--primary-rgb), 0.15);
  color: var(--primary-300);
}

.dark .interest-more:hover,
.dark .tags-toggle-btn:hover {
  background-color: rgba(var(--primary-rgb), 0.25);
}

.dark .card-action-button {
  background-color: var(--dark, #222831);
}

.dark .card-action-button:hover::before {
  background-color: rgba(255, 255, 255, 0.05);
}

.dark .status-tag {
  background-color: rgba(var(--secondary-rgb), 0.15);
  color: var(--secondary-300);
  border-color: rgba(var(--secondary-rgb), 0.3);
}

.dark .identity-tag {
  background-color: rgba(var(--secondary-rgb), 0.15);
  color: var(--secondary-300);
  border-color: rgba(var(--secondary-rgb), 0.3);
}

.dark .identity-woman {
  background-color: rgba(var(--primary-rgb), 0.15) !important;
  color: var(--primary-300) !important;
  border-color: rgba(var(--primary-rgb), 0.3) !important;
}

.dark .identity-man {
  background-color: rgba(var(--secondary-rgb), 0.15) !important;
  color: var(--secondary-300) !important;
  border-color: rgba(var(--secondary-rgb), 0.3) !important;
}

.dark .identity-couple {
  background-color: rgba(var(--warning-rgb), 0.15) !important;
  color: var(--warning-300) !important;
  border-color: rgba(var(--warning-rgb), 0.3) !important;
}

/* ========== RESPONSIVE ADJUSTMENTS ========== */
@media (max-width: 1200px) {
  .user-card {
    max-width: 100%;
  }
  
  .user-card-photo {
    height: 300px;
  }
}

@media (max-width: 992px) {
  .user-card-photo {
    height: 280px;
  }
}

@media (max-width: 768px) {
  .user-list-item {
    flex-direction: column;
  }
  
  .user-list-photo-container {
    width: 100%;
    height: 220px;
    max-height: 220px;
  }
  
  .user-list-actions {
    padding: 15px 20px 20px;
    flex-direction: row;
    border-left: none;
    border-top: 1px solid var(--border-color);
    justify-content: center;
    gap: 20px;
  }
  
  .card-action-button {
    height: 42px;
  }
}

@media (max-width: 576px) {
  .user-card {
    max-width: 100%;
  }
  
  .user-card-photo {
    height: 220px;
  }
  
  .user-card-info {
    padding: 15px;
  }
  
  .user-card-name {
    font-size: 20px;
  }
  
  .interest-tag {
    font-size: 11px;
    padding: 5px 8px;
  }
  
  .tags-toggle-btn {
    font-size: 11px;
  }
  
  .card-action-button {
    font-size: 16px;
    height: 40px;
  }
  
  .user-list-info {
    padding: 15px;
    gap: 6px;
  }
  
  .user-list-name {
    font-size: 18px;
  }
  
  .user-list-actions {
    padding: 12px 15px 15px;
  }
}

