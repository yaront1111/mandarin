    flex-direction: row;
    border-left: none;
    border-top: 1px solid var(--border-color, rgba(230, 230, 230, 0.7));
    justify-content: center;
    gap: 16px;
  }

  .card-action-button {
    height: 36px;
    font-size: 16px;
  }

  .message-bubble {
    max-width: 85%;
  }

  .message-image-container,
  .message-audio-container,
  .message-video-container {
