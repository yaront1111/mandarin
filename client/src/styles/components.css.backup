}

.user-list-actions .card-action-button {
  width: 44px;
  height: 44px;
  padding: 0;
  border-radius: 50%;
}

/* Extended Detail Items */
.extended-details-container {
  margin-bottom: 10px;
}

.extended-details-row {
  display: flex;
  align-items: center;
  gap: 15px;
  flex-wrap: wrap;
}

.extended-detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
  font-size: 14px;
  transition: transform 0.3s ease;
}

.user-card:hover .extended-detail-item {
  transform: translateX(3px);
}

.detail-label {
  font-size: 13px;
  font-weight: 600;
  color: var(--text-medium);
  margin-right: 6px;
}

.extended-detail-item .more-count {
  font-size: 12px;
  color: var(--text-light);
  margin-left: 4px;
  background-color: var(--primary-50);
