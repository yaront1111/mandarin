  }

  .conversation-details {
    width: 100%;
  }

  .conversation-header {
    flex-direction: column;
  }

  .last-message {
    display: none;
  }

  .card-action-button {
    font-size: 16px;
    height: 36px;
  }
}

@media (max-width: 576px) {
  .modern-header {
    padding: 0.625rem 0;
  }

  .logo {
    font-size: 1.25rem;
  }

  .user-dropdown {
    position: fixed;
    top: auto;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
