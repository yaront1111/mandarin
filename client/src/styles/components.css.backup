  font-weight: 500;
}

.detail-icon {
  margin-right: 6px;
  opacity: 0.7;
  color: var(--primary-300);
}

/* ========== DARK MODE ADJUSTMENTS ========== */
.dark .user-card,
.dark .user-list-item {
  background-color: var(--medium, #222831);
  border-color: rgba(255, 255, 255, 0.1);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

.dark .user-card:hover,
.dark .user-list-item:hover {
