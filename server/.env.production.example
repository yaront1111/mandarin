# Production Environment Configuration Template
# Copy this to .env.production and fill in your values

# Server Configuration
NODE_ENV=production
PORT=5000
APP_NAME=Flirtss
APP_URL=https://flirtss.com
APP_DOMAIN=flirtss.com

# Database
MONGODB_URI=mongodb://localhost:27017/flirtss_production

# Authentication
JWT_SECRET=your-very-secure-jwt-secret-here
JWT_EXPIRE=7d

# Email Configuration (using Resend)
USE_RESEND=true
RESEND_API_KEY=re_7k4fkJua_N1aYoE2o8yNQvhTeuk32S5Ux
EMAIL_FROM=noreply@flirtss.com

# File Uploads
FILE_UPLOAD_PATH=/var/www/flirtss/uploads
MAX_FILE_SIZE=5242880

# Redis (optional)
REDIS_URL=redis://localhost:6379

# CORS Settings
ALLOWED_ORIGINS=https://flirtss.com,https://www.flirtss.com

# Frontend URL
FRONTEND_URL=https://flirtss.com