# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mandarin
MONGODB_DEBUG=false

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRE=30d

# File Upload Configuration
FILE_UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,mp4,mov

# Redis Configuration (for socket.io and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdatingapp.com
EMAIL_FROM_NAME=Your Dating App

# SMS Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Storage Configuration (for user uploads)
STORAGE_TYPE=local  # or 's3', 'cloudinary', etc.
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET_NAME=your-dating-app-bucket
S3_REGION=us-east-1

# Notification Settings
NOTIFICATION_RETENTION_DAYS=30  # How long to keep notifications in the database
ENABLE_PUSH_NOTIFICATIONS=true
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@flirtss.com

# Rate Limiting
RATE_LIMIT_WINDOW=15  # in minutes
RATE_LIMIT_MAX=100    # max requests per window
MESSAGE_RATE_LIMIT=60 # messages per minute
LIKE_RATE_LIMIT=30    # likes per minute

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_TO_FILE=true
LOG_FILE_PATH=logs

# Security
BCRYPT_SALT_ROUNDS=10
CORS_MAX_AGE=86400  # 24 hours in seconds
HELMET_CONTENT_SECURITY_POLICY=false  # Set to true in production

# Feature Flags
ENABLE_SOCKET_CLUSTERING=false
ENABLE_GEOLOCATION=true
ENABLE_MATCHING_ALGORITHM=true
ENABLE_REAL_TIME_NOTIFICATIONS=true

EMAIL_FROM="noreply@flirtss.com"
EMAIL_USER="noreply@flirtss.com"
EMAIL_PASSWORD="ChangeThis456"!
APP_URL=flirtss.com
APP_NAME=mandarin
