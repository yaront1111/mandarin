# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# Subscription & Payment Settings (if applicable)
SUBSCRIPTION_PAYMENT_WEBHOOK_SECRET=webhook_secret_key

# Performance Settings
CLUSTER_MODE=false
