# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mandarin

# Authentication
JWT_SECRET=your_secure_jwt_secret_key
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=30
REFRESH_TOKEN_EXPIRE=90

# Email Configuration
EMAIL_USER=noreply@flirtss.com
EMAIL_PASSWORD=ChangeThis456!
EMAIL_FROM=noreply@flirtss.com
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_SECURE=false

# File Upload Settings
FILE_UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880

# CORS Settings
ALLOWED_ORIGINS=https://flirtss.com,https://www.flirtss.com
FRONTEND_URL=https://flirtss.com

# Application Settings
APP_NAME=Flirtss
APP_URL=https://flirtss.com

# Feature Flags
ENABLE_CRON_JOBS=true

# Cache Settings
STATIC_CACHE_MAX_AGE=86400
IMAGE_CACHE_MAX_AGE=604800
VIDEO_CACHE_MAX_AGE=2592000
