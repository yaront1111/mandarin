# Production Environment Configuration for Mandarin Dating App (Flirtss)

# Server Environment
NODE_ENV=production
PORT=5000
API_VERSION=v1
BODY_LIMIT=10mb

# Application Details
APP_NAME=Flirtss Dating
APP_URL=https://flirtss.com

# CORS Settings
FRONTEND_URL=https://flirtss.com
ALLOWED_ORIGINS=https://flirtss.com,https://www.flirtss.com

# Database Settings
MONGODB_URI=mongodb://localhost:27017/mandarin

# Authentication
JWT_SECRET=K@jd38fR!90ajsd*f_1290qwASD
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=30
REFRESH_TOKEN_EXPIRE=90
SOCKET_TOKEN_EXPIRE=24h
MAX_REFRESH_AGE_MS=2592000000

# Socket.IO Settings
SOCKET_PATH=/socket.io

# Uploads & Static Files
FILE_UPLOAD_PATH=uploads
